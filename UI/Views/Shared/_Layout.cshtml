    <!-- Countdown JS -->
    <script src="~/Scripts/js/finalcountdown.min.js"></script>
    <!-- Nice Select JS -->
    <script src="~/Scripts/js/nicesellect.js"></script>
    <!-- Ytplayer JS -->
    <script src="~/Scripts/js/ytplayer.min.js"></script>
    <!-- Flex Slider JS -->
    <script src="~/Scripts/js/flex-slider.js"></script>
    <!-- ScrollUp JS -->
    <script src="~/Scripts/js/scrollup.js"></script>
    <!-- Onepage Nav JS -->
    <script src="~/Scripts/js/onepage-nav.min.js"></script>
    <!-- Easing JS -->
    <script src="~/Scripts/js/easing.js"></script>
    <!-- Active JS -->
    <script src="~/Scripts/js/active.js"></script>
    <script src="https://cdn.safecharge.com/safecharge_resources/v1/websdk/safecharge.js"></script>
    <script>
        $(document).ready(function () {
            var cartCount = window.localStorage.getItem("cartCount");

            totalCount = (cartCount === "null") || (cartCount === "undefined") || (cartCount === null) ? 0 : parseInt(cartCount);

            var cartCountElem = document.getElementById('cartCount').innerHTML = totalCount;
        });
    </script>
    @RenderSection("scripts", required: false)

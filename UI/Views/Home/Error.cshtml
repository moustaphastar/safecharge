@model UI.SafeChargeModels.PostPaymentResponse
@{
    ViewBag.Title = "Error Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Start Checkout -->
<section class="shop checkout section">
    <div class="container">
        <div class="row">
            <div class="col-6 m-sm-auto">
                <div class="order-details">
                    <!-- Header Widget -->
                    <div class="single-widget">
                        <h2>Payment Error!</h2>
                        <div class="content">
                            <ul>
                                <li>Something went wrong. Try from the beginning or contact support if you encounter again.</li>
                            </ul>
                        </div>
                    </div>
                    <!--/ End Header Widget -->
                    <!-- Button Widget -->
                    <div class="single-widget get-button">
                        <div class="content d-flex" style="justify-content: space-around;">
                            <div class="button">
                                <a href="/Home" class="btn btn-default">Return Home</a>
                            </div>
                        </div>
                    </div>
                    <!--/ End Button Widget -->
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ End Checkout -->


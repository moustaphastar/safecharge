            src="https://ppp-test.safecharge.com/ppp/purchase.do?merchant_id=@Model.MerchantId&merchant_site_id=@Model.MerchantSiteId&version=4.0.0&user_token_id=c433b5a9-bf3f&numberofitems=@Model.Items.Count.ToString()&total_tax=0&discount=0&shipping=0&handling=0&currency=@Model.Currency&@itemList&total_amount=@Model.Amount&first_name=&address1=&payment_method=cc_card&last_name=&city=&merchantLocale=en_US&phone1=&zip=&email=sfchargeapp9@gmail.com&country=CA&notify_url=@notifyUrl&success_url=@notifyUrl&error_url=@errorUrl&pending_url=@pendingUrl&time_stamp=@Model.TimeStamp&checksum=@Model.Checksum">
    </iframe>
